(rule
 (targets pp5+gt+plugins+ocanren+dump.exe)
 (package OCanren)
 (deps
  %{project_root}/config/package-doc.cfg
  (package GT)
  (:cmas pa_ocanren.cmxa))
 (action
  (run
   mkcamlp5.opt
   -package
   camlp5,camlp5.pa_o,camlp5.macro,camlp5.pr_dump,GT.syntax,GT.syntax.all
   %{read-lines:../config/package-doc.cfg}
   %{cmas}
   -o
   %{targets})))

