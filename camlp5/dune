(env
 (dev
  (flags
   (:standard -w -27))))

(library
 (name pa_ocanren)
 (public_name OCanren.syntax)
 (modules writer pa_ocanren)
 (libraries camlp5)
 (preprocess
  (action
   (run %{project_root}/camlp5/pp5+dump.byte %{input-file}))))

